{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Threat Dragon Model Schema",
  "type": "object",
  "properties": {
    "summary": { "type": "string" },
    "detail": { "type": "string" },
    "diagram": {
      "type": "object",
      "properties": {
        "components": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "name": { "type": "string" },
              "type": { "type": "string" },
              "threats": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "title": { "type": "string" },
                    "severity": { "type": "string" },
                    "mitigation": { "type": "string" }
                  },
                  "required": ["title", "severity"]
                }
              }
            },
            "required": ["id", "type"]
          }
        }
      }
    }
  },
  "required": ["diagram"]
}
